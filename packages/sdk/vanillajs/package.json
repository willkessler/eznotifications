{
  "name": "@this-is-not-a-drill/vanillajs-sdk",
  "private": false,
  "description": "Core vanilla js SDK for deploying the This is Not A Drill! service in client apps.",
  "version": "1.0.3",
  "main": "dist/index.js",
  "module": "dist/bundle.esm.js",
  "repository": {
    "url": "https://github.com/willkessler/eznotifications",
    "type": "git"
  },
  "author": "Will Kessler <willkessler@this-is-not-a-drill.com> (https://this-is-not-a-drill.com)",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist && mkdir dist",
    "ship": "rm -rf dist && mkdir dist && tsc && webpack",
    "build": "tsc && webpack --watch",
    "build:prod": "tsc && webpack --env production",
    "build:dev": "tsc && webpack --env development",
    "start": "webpack serve --mode development --env development",
    "serve": "concurrently \"yarn build\" \"yarn start\""
  },
  "devDependencies": {
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@types/dompurify": "^3.0.5",
    "@types/marked": "^6.0.0",
    "concurrently": "^8.2.2",
    "css-loader": "^7.1.1",
    "dompurify": "^3.1.2",
    "json5": "^2.2.3",
    "marked": "^12.0.2",
    "style-loader": "^4.0.0",
    "sweetalert2": "^11.10.8",
    "uuidv4": "^6.2.13",
    "webpack-dev-server": "^5.0.4"
  }
}
