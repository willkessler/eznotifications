{
  "compilerOptions": {
    "baseUrl": ".",
    "paths" : {
      "*": [
        "src/*", 
        "node_modules/*"
      ],
    },
    "typeRoots": [
      "./node_modules/@types"
    ],
    "declarationDir": "./dist/types",
    "outDir": "./dist",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "target": "es2015",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "removeComments":false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}
